{
    "name": "lighthouse/framework",
    "description": "The Lighthouse PHP Framework - An educational MVC framework",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "framework",
        "mvc",
        "educational",
        "php",
        "lighthouse"
    ],
    "authors": [
        {
            "name": "Lighthouse Contributors",
            "homepage": "https://github.com/lighthouse-php/framework/contributors"
        }
    ],
    "require": {
        "php": "^8.2",
        "lighthouse/http": "^0.1",
        "lighthouse/container": "^0.1",
        "lighthouse/middleware": "^0.1",
        "lighthouse/router": "^0.1",
        "lighthouse/view": "^0.1",
        "lighthouse/error-handler": "^0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Lighthouse\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lighthouse\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable"
}
